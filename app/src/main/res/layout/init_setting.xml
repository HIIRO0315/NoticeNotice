<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:weightSum="1"
            android:gravity="bottom">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="95dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Notice"
                android:id="@+id/textView2"
                android:textColor="#275d90"
                android:autoText="true"
                android:textSize="100dp"
                android:gravity="top|bottom"
                android:layout_weight="0.34" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.22" />

            <TextView
                android:layout_width="273dp"
                android:layout_height="98dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Notice"
                android:id="@+id/textView3"
                android:textColor="#275d90"
                android:autoText="true"
                android:textSize="100dp"
                android:gravity="left|bottom"
                android:singleLine="true"
                android:typeface="normal" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.29"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="起動"
                android:id="@+id/textView"
                android:textSize="25dp"
                android:gravity="center_vertical"
                android:layout_weight="0.30" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.34" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="On/Off"
                android:textSize="21dp"
                android:id="@+id/swOnOff"
                android:nestedScrollingEnabled="true"
                android:layout_weight="0.21" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.43"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#275d90">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="使い方"
                android:id="@+id/btnUsage"
            android:textSize="25dp"
            android:textColor="@android:color/white"
            android:phoneNumber="false"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
            android:shadowRadius="1.5"
            android:shadowColor="#888"
            android:background="#00000000"
            android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:paddingRight="15dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="送信間隔設定"
                android:id="@+id/btnSendSetting"
                android:textSize="25dp"
                android:textColor="@android:color/white"
                android:phoneNumber="false"
                android:shadowDx="1.5"
                android:shadowDy="1.5"
                android:shadowRadius="1.5"
                android:shadowColor="#888"
                android:background="#00000000"
                android:gravity="center_vertical|right"
                android:paddingRight="15dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_weight="2" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="送信先設定"
                android:id="@+id/btnInputAddress"
                android:layout_weight="1.41"
                android:gravity="center_vertical|center|right"
                android:textSize="25dp"
                android:textColor="@android:color/white"
                android:phoneNumber="false"
                android:shadowDx="1.5"
                android:shadowDy="1.5"
                android:shadowRadius="1.5"
                android:shadowColor="#888"
                android:background="#00000000"
                android:layout_gravity="right"
                android:paddingRight="15dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></LinearLayout>
    </LinearLayout>

</LinearLayout>
